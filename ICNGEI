<script>
    function togglePopup() {
        const popup = document.getElementById('popup');
        if (popup.style.left === '0px') {
            popup.style.left = '-300px'; // Hide the popup
        } else {
            popup.style.left = '0px'; // Show the popup
        }
    }
</script>

